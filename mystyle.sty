%fonts
\def\mc#1{\mathcal{#1}}
\def\msf#1{\mathsf{#1}}
\def\mit#1{\mathit{#1}}

%Basics
\def\set#1{\left\{#1\right\}}
\def\bs{\backslash}

%Domains
\def\coh{\frown}
\def\meet#1{\mathop{\bigsqcap}#1}
\def\join#1{\mathop{\bigsqcup}#1}
\def\low#1{\mathop{\downarrow\!\!#1}}
\def\up#1{\mathop{\uparrow\!\!#1}}
\def\sup{\mathrel{\sqcup}}
\def\inf{\mathrel{\sqcap}}
\def\cov{\mathrel{-\!\!\!\subset}}

%arrows
\def\lts#1{\overset{#1}{\rar}}
\def\rar{\rightarrow}


%greek
\def\al{\alpha}
\def\eps{\epsilon}
\def\la{\lambda}
\def\ga{\gamma}

%math 
\def\tuple#1{\langle{#1}\rangle}
\def\eqdef{\overset{\Delta}{=}}
\def\floor#1{\left\lfloor#1\right\rfloor}

%misc
\def\FIG#1#2#3{
	\begin{figure}
	\begin{center}
	\includegraphics[width=#1]{images/#2.pdf}
	\caption{\small #3}\label{fig:#2}
	\end{center}
	\end{figure}
}

